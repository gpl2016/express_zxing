<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPaddingLeft="10dp"
    android:layout_margin="3dp"
    app:contentPaddingTop="8dp"
    app:contentPaddingRight="5dp"
    app:contentPaddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!--这个是在用户登录之后显示给用户的，全都是他寄出的快递-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cae_qr_code"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_width="92dp"
            android:layout_height="92dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:text="快递单号："
                    android:textColor="#000000"
                    android:id="@+id/cae_item_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--用的时候就先取出来快递单号：再在后面跟上8位单号-->

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:text="收件人："
                    android:id="@+id/cae_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <!--用的时候就先取出来收件人：再在后面跟上名字-->
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_phone_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:text="13278882166"
                    android:id="@+id/cae_item_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location_24dp" />

                <TextView
                    android:id="@+id/cae_item_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:text="湖南省长沙市岳麓区中南大学升华学生公寓14栋"
                    android:textSize="14sp" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>


